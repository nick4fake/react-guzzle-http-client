{
    "name": "wyrihaximus/react-guzzle-http-client",
    "description": "Asynchronous GuzzleRing adapter powered by react/http-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Cees-Jan Kiewiet",
            "email": "ceesjank@gmail.com",
            "homepage": "http://wyrihaximus.net/"
        }
    ],
    "require": {
        "php": "^5.4|^7.0",
        "clue/buzz-react": "^1.1",
        "clue/http-proxy-react": "^0.3",
        "clue/socks-react": "^0.8",
        "guzzlehttp/psr7": "^1.0",
        "psr/http-message": "^1.0",
        "react/dns": "^0.4",
        "react/http-client": "^1.0 || ^0.5",
        "react/socket": "^1.0 || ^0.8",
        "react/stream": "^1.0 || ^0.7",
        "wyrihaximus/ticking-promise": "^1.6"
    },
    "require-dev": {
        "clue/block-react": "^1.1",
        "phake/phake": "~1.0.6",
        "phpunit/phpunit": "^5.0 || ^4.8",
        "squizlabs/php_codesniffer": "~1.5.0",
        "vectorface/dunit": "~2"
    },
    "autoload": {
        "psr-4": {
            "WyriHaximus\\React\\Guzzle\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WyriHaximus\\React\\Tests\\Guzzle\\HttpClient\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "5.4"
        }
    }
}
